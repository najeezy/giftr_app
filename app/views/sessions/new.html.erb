<h2>Sign In</h2>

<% if @error %>
<p><%= @error %></p>
<% end %>

<%= form_tag sessions_path do %>
  <%= label_tag :username %>
  <%= text_field_tag :username %>

  <%= label_tag :password %>
  <%= password_field_tag :password %>

  <%= submit_tag 'Sign In' %>
<% end %>

<%= link_to 'Cancel', root_path %>
