<h2>Edit Event</h2>

<% if @event.errors.count > 0 %>
<ul>
  <% if @event.errors.full_messages.include?("Title can't be blank") %>
    <li><%= @event.errors.full_messages.first %></li>
  <% end %>

  <% if @event.errors.full_messages.include?("Date can't be blank") %>
    <li><%= @error_message %></li>
  <% end %>
<ul>
<% end %>

<%= form_for @event do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>

  <%= f.label :date %>
  <%= f.text_field :date %>

  <%= f.hidden_field :user_id %>

  <%= f.submit %>
<% end %>
